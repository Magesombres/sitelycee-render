# Exemple de configuration .env
# Copiez ce fichier en .env et adaptez les valeurs

NODE_ENV=development
PORT=10000

# MongoDB
# Local:
MONGO_URI=mongodb://localhost:27017/sitelycee
# Production (Render + MongoDB Atlas):
# MONGO_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/sitelycee?retryWrites=true&w=majority

# JWT
JWT_SECRET=change_me_dev_secret

# CORS (1 = autoriser toutes origines, 0 = restreindre à ORIGIN_ALLOWED si implémenté)
CORS_ALLOW_ALL=1

# Debug authentification (logs détaillés des tentatives de login)
DEBUG_AUTH=0

# Niveau de logs
LOG_LEVEL=info
