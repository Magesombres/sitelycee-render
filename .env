# Configuration pour Render
NODE_ENV=production
PORT=10000

# Base de données MongoDB
# ⚠️ EN LOCAL: utilisez mongodb://localhost:27017/sitelyee
# ⚠️ SUR RENDER: configurez cette variable avec votre URI MongoDB Atlas
# Exemple: mongodb+srv://username:password@cluster.mongodb.net/sitelyee?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/sitelyee

# JWT Secret
# ⚠️ IMPORTANT: Générez un secret unique pour la production avec: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Sur Render, définissez cette variable d'environnement avec une valeur sécurisée
JWT_SECRET=your_super_secret_jwt_key_change_this_in_render

# CORS - Permettre tous les domaines (1 = true, 0 = false)
CORS_ALLOW_ALL=1

# Logs
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=150

# Upload settings (optionnel)
NSFW_THRESHOLD=0.7
UPLOAD_MAX_DIM=1600